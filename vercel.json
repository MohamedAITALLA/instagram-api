{
    "version": 2,
    "builds": [
      {
        "src": "src/main.ts",
        "use": "@vercel/node",
        "config": {
            "includeFiles": ["node_modules/sharp/**"]
          }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "src/main.ts",
        "methods": [
          "GET",
          "POST",
          "PUT",
          "DELETE",
          "PATCH",
          "OPTIONS"
        ]
      }
    ],
    "env": {
      "NODE_ENV": "production",
      "VERCEL": "1"
    },
    "functions": {
      "api/upload.js": {
        "memory": 1024,
        "maxDuration": 60
      }
    }
  }